html
    head
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(http-equiv="Content-Type", content="text/html;charset=UTF-8")
        title='pug' 
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")
    body 
        div(class="container mt-3")
            div(class="jumbotron")
                h1='Vista de Productos'
                    if(products.length)
                        div(class="table-responsive")
                            table(class="table table-dark")
                                tr
                                    th='Nombre'
                                    th='Precio'
                                    th='Foto'
                                each val in products
                                        tr
                                        td=val.title
                                        td=val.price
                                        td
                                            img(src=val .thumbnail alt="" style="width: 40px; height:30px")
                    else 
                        h3(class="alert alert-warning")='No se encontraron productos'
                    a(href="/" type="button" class="btn btn-primary")='Cargar un nuevo producto'